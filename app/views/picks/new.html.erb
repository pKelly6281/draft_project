<h1>Add Pick</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@pick) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :round %>
      <%= f.text_field :round, class: 'form-control' %>

      <%= f.label :pick %>
      <%= f.text_field :pick, class: 'form-control' %>

      <%= f.label :user %>
      <%= f.text_field :user, class: 'form-control' %>

      <%= f.label :team %>
      <%= f.text_field :team, class: 'form-control' %>

      <%= f.label :player %>
      <%= f.text_field :player, class: 'form-control' %>

      <%= f.submit "Add My Pick", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
